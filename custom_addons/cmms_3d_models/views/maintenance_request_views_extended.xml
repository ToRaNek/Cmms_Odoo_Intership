<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Étendre la vue formulaire des demandes de maintenance -->
    <record id="view_maintenance_request_form_inherit_assign" model="ir.ui.view">
        <field name="name">maintenance.request.form.inherit.assign</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
        <field name="arch" type="xml">
            <!-- Ajouter les champs d'assignation dans un groupe après les champs existants -->
            <xpath expr="//group[last()]" position="after">
                <group string="Assignment">
                    <field name="assigned_person_id"
                           options="{'no_create': True, 'no_open': True}"
                           domain="[('active', '=', True), ('available', '=', True)]"/>
                    <field name="assigned_user_id"
                           options="{'no_create': True, 'no_open': True}"
                           attrs="{'readonly': [('assigned_person_id', '!=', False)]}"/>
                    <field name="assigned_person_role" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Étendre la vue liste des demandes de maintenance -->
    <record id="view_maintenance_request_tree_inherit_assign" model="ir.ui.view">
        <field name="name">maintenance.request.tree.inherit.assign</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_tree"/>
        <field name="arch" type="xml">
            <!-- Ajouter la colonne personne assignée -->
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="assigned_person_id" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- Étendre la vue recherche des demandes de maintenance -->
    <record id="view_maintenance_request_search_inherit_assign" model="ir.ui.view">
        <field name="name">maintenance.request.search.inherit.assign</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_search"/>
        <field name="arch" type="xml">
            <!-- Ajouter des champs de recherche -->
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="assigned_person_id"/>
            </xpath>

            <!-- Ajouter des filtres dans le groupe existant -->
            <xpath expr="//filter[last()]" position="after">
                <separator/>
                <filter string="Assignées à une personne" name="assigned_person"
                        domain="[('assigned_person_id', '!=', False)]"/>
                <filter string="Non assignées" name="not_assigned_person"
                        domain="[('assigned_person_id', '=', False)]"/>
            </xpath>

            <!-- Ajouter des groupes -->
            <xpath expr="//group" position="inside">
                <filter string="Personne assignée" name="group_by_assigned_person"
                        context="{'group_by': 'assigned_person_id'}"/>
            </xpath>
        </field>
    </record>

    <!-- Vue spécifique pour les demandes assignées à une personne -->
    <record id="action_maintenance_request_by_person" model="ir.actions.act_window">
        <field name="name">Demandes par personne</field>
        <field name="res_model">maintenance.request</field>
        <field name="view_mode">tree,form,kanban,calendar,graph,pivot</field>
        <field name="domain">[('assigned_person_id', '!=', False)]</field>
        <field name="context">{'group_by': 'assigned_person_id'}</field>
        <field name="search_view_id" ref="view_maintenance_request_search_inherit_assign"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune demande assignée à une personne spécifique
            </p>
            <p>
                Cette vue affiche toutes les demandes de maintenance qui ont été assignées à des personnes spécifiques.
            </p>
        </field>
    </record>

    <!-- Ajouter un menu pour cette vue -->
    <menuitem id="menu_maintenance_request_by_person"
              name="Demandes par personne"
              parent="maintenance.menu_m_request"
              action="action_maintenance_request_by_person"
              sequence="15"/>
</odoo>