<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="CMMS3DViewer">
        <div class="o_3d_viewer">
            <div class="o_3d_viewer_header">
                <div class="o_3d_viewer_title">Visualiseur 3D</div>
                <button class="btn btn-secondary o_close_viewer">
                    <i class="fa fa-times"/> Fermer
                </button>
            </div>
            <div class="o_3d_container">
                <div class="o_3d_loading">
                    <div class="o_3d_loading_spinner"></div>
                    <div>Chargement du modèle 3D...</div>
                    <div class="o_3d_loading_progress">0%</div>
                </div>
                <div class="o_3d_error d-none">
                    <i class="fa fa-exclamation-triangle fa-3x mb-2"></i>
                    <div class="o_3d_error_message">Erreur lors du chargement du modèle 3D</div>
                </div>
            </div>
        </div>
    </t>
</templates>